.container
  .content
    .row-fluid
      .span9
        %h2 My Account
        %hr
        
        .row-fluid
          %h3 Facebook
          %p
            - if current_user.facebook
              Facebook successfully connected!
            - else
              Not connected
              %br
              = link_to "Sign in to Twitter", "/users/auth/facebook", :class => "btn btn-success"
          
        .row-fluid
          %h3 Twitter
          %p
            - if current_user.twitter
              Twitter succesffully connected!
            - else
              Not connected
              %br
              = link_to "Sign in to Twitter", "/users/auth/twitter"
        
        
        .row-fluid
          = icon_link_to "edit facebook", "/path/to/item", "icon-pencil", :class => "btn btn-primary", :method => :post, :'data-type' => :json
          
          -#link_to text, path, :remote => true, :method => :post, :'data-type' => :json, :class => classes, :"data-#{m.class.name.underscore.downcase}-id" => m.id
          
